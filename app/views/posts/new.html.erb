<%= form_for :post, url: posts_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %><br>
      <%= f.label :author %><br>
      <%= f.text_field :author %><br>
      <%= f.label :short_body %><br>
      <%= f.text_field :short_body %><br>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
